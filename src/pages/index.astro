  }

  .member .info {
    @apply text-2xl;
  }

  .member img {
    border-radius: 50%;
  } */

  @media (max-width: 767px) {
    h1 {
      font-size: 4rem;
      @apply my-8;
    }

    h2 {
      font-size: 2rem;
      @apply my-8;
    }

    .project > .container {
      flex-direction: column;
      gap: 0;
    }

    .project > .container > div {
      max-width: 100%;
    }
  }
  @media (max-width: 1023px) {
    .project .image {
      padding: 0;
      margin-bottom: 1rem;
    }
  }
  .project .title {
    line-height: 3rem;
    margin-bottom: 1.5rem;
  }
  @media (max-width: 1279px) {
    .project p {
      width: 100%;
    }
  }
</style>
