<style>
  .project {
    @apply py-16;
  }

  .project > .container {
    @apply flex gap-8;
  }

  .aurora {
    background: linear-gradient(135deg, #7f47dd 0%, #2575fc 100%);
  }

  .project > .container > div {
    max-width: 50%;
    flex-grow: 1;
  }

  .project .image {
    padding: 0 4rem;
  }

  .project .image img {
    border-radius: 8px;
  }

  .project .info {
    text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.25);
  }

  .project .title {
    font-size: 3rem;
    font-weight: 700;
  }

  .project p {
    width: 80%;
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }

  .project a {
    font-size: 18px;
    font-weight: 700;
    padding: 0.5rem 1rem;
    border-radius: 24px;
    border: 2px solid #fff;
    display: inline-block;
  }

  .project a:hover {
    background: #fff;
    color: #000;
    @apply shadow-xl -translate-y-1 duration-100;
  }

